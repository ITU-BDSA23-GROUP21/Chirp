@page "/{author}/Information"
@model Chirp.Razor.Pages.InformationModel
@using System.Security.Principal
@using Microsoft.Identity.Web
@using Chirp.Core
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");

}

<div>
        <h2>My Information</h2>
    <div class="cheepbox">
        <p>Name: @User.Identity.Name</p>
        <p>Email: @Model.Email</p>
        <form method="post">
            <button type="submit" asp-page-handler="Anonymize">Forget ME!</button>
        </form>
        <h3>Following</h3>
        @if (Model.Followings.Any())
        {
                @foreach (AuthorDto link in Model.Followings)
                {
                    <a href="/@link.Name">@link.Name</a>
                    <br>
                }
        }
        else
        {
            <p>You are not following anyone</p>
        }  
    </div>
    <h2>My Cheeps: </h2>
    <div>
        @if (Model.Cheeps.Any())
        {
            <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.Cheeps)
                {
                    <li>
                        <p>
                            <strong>
                                <a href="/@cheep.Author">@cheep.Author</a>
                            </strong>
                            @cheep.Message
                            <small>&mdash; @cheep.Timestamp</small>
                        </p>
                    </li>
                }
            </ul>
        } else {
            <p>You have not been chirping</p>
        }
    </div>
</div>
